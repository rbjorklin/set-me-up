#!/bin/env sh
DIR=~/.fzf-launcher/urls
cd ${DIR}
cat $(ls --sort=time --time=atime -1) | \
	fzf \
	--border rounded \
    --bind "enter:execute-silent(touch \$(grep -rsIl {}) ; firefox \$(echo {} | sed \"s#SUBSTITUTE#\$(gpaste-client get --use-index 0)#g\"))+abort" \
	--preview="echo {} | sed \"s#SUBSTITUTE#\$(gpaste-client get --use-index 0)#g\""
