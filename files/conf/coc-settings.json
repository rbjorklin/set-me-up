{
  "coc.preferences.formatOnSaveFiletypes": [
    "ocaml"
  ],
  "suggest.noselect": true,
  "suggest.floatConfig.border": true,
  "signature.floatConfig.border": true,
  "hover.floatConfig.border": true,
  "diagnostic.floatConfig.border": true,
  "languageserver": {
    "ocaml-lsp": {
      "command": "opam",
      "args": [
        "config",
        "exec",
        "--",
        "ocamllsp"
      ],
      "filetypes": [
        "ocaml",
        "reason"
      ]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod"
      ],
      "filetypes": [
        "go"
      ]
    }
  }
}
